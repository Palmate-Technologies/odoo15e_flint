<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_attendance_adjustment_tree" model="ir.ui.view">
        <field name="name">hr.attendance.adjustment.tree</field>
        <field name="model">hr.attendance.adjustment</field>
        <field name="arch" type="xml">
            <tree string="Attendance Adjustment">
                <field name="employee_id" />
                <field name="adjustment_date" />
                <field name="additional_hours" widget="float_time" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_attendance_adjustment_form" model="ir.ui.view">
        <field name="name">hr.attendance.adjustment.form</field>
        <field name="model">hr.attendance.adjustment</field>
        <field name="arch" type="xml">
            <form string="Attendance Adjustment">
                <header>
                    <button name="approve" class="oe_highlight" states="draft" string="Approve" type="object"/>
                    <button name="set_to_draft" states="approved" string="Set to Draft" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="employee_id" class="oe_edit_only"/>
                        <h1><field name="employee_id" placeholder="Employee"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="adjustment_date" />
                            <field name="additional_hours" widget="float_time" />
                        </group>
                        <group>
                            <field name="creating_user_id" />
                            <field name="approved_user_id" />
                        </group>
                    </group>
                    <group colspan="4" string="Reason">
                        <field name="reason" nolabel="1" colspan="4" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_attendance_adjustment_filter" model="ir.ui.view">
        <field name="name">hr.attendance.adjustment.filter</field>
        <field name="model">hr.attendance.adjustment</field>
        <field name="arch" type="xml">
            <search string="Hr Attendance Adjustment Search">
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <record id="hr_attendance_adjustment_action" model="ir.actions.act_window">
        <field name="name">Attendances Adjustment</field>
        <field name="res_model">hr.attendance.adjustment</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_attendance_adjustment_filter" />
    </record>

    <menuitem
            id="menu_hr_attendance_adjustment"
            name="Adjustments"
            parent="hr_attendance.menu_hr_attendance_root"
            sequence="12"
            groups="hr_attendance.group_hr_attendance_user"
            action="hr_attendance_adjustment_action"
    />

</odoo>