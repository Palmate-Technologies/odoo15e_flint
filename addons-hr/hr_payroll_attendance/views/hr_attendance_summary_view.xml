<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- HR Attendance Summary Lines -->
    <record id="view_attendance_summary_line_tree" model="ir.ui.view">
        <field name="name">hr.attendance.summary.line.tree</field>
        <field name="model">hr.attendance.summary.line</field>
        <field name="arch" type="xml">
            <tree string="Summary Lines" edit="false">
                <field name="attendance_date" />
                <field name="dayofweek" />
                <field name="working_hours" />
                <field name="worked_hours" />
                <field name="overtime_hours" />
                <field name="deduction_hours" />
                <field name="adjustment_hours" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <record id="view_attendance_summary_line_form" model="ir.ui.view">
        <field name="name">hr.attendance.summary.line.form</field>
        <field name="model">hr.attendance.summary.line</field>
        <field name="arch" type="xml">
            <form string="Summary Lines" create="false" delete="false" edit="false">
                <sheet>
                    <group string="Details">
                        <group>
                            <field name="attendance_date" />
                            <field name="dayofweek" />
                            <field name="status" />
                            <field name="working_hours" widget="float_time" />
                            <field name="worked_hours" widget="float_time" />
                        </group>
                        <group>
                            <field name="overtime_hours" widget="float_time" />
                            <field name="deduction_hours" widget="float_time" />
                            <field name="adjustment_hours" widget="float_time" />
                        </group>
                    </group>
                    <group string="Leaves" colspan="4" attrs="{'invisible':[('status','!=','leave')]}">
                        <field name="holiday_id" />
                    </group>
                    <group string="Attendances" colspan="4">
                        <field name="attendance_ids" nolabel="1" colspan="4" />
                    </group>
                    <group string="Adjustments" colspan="4">
                        <field name="adjustment_ids" nolabel="1" colspan="4" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Attendance Summary -->
    <record id="view_attendance_summary_tree" model="ir.ui.view">
        <field name="name">hr.attendance.summary.tree</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-muted="state=='validated'" string="Employee attendances summary" edit="false" create="false">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="check_date"/>
                <field name="worked_hours_total_compute" widget="float_time"/>
                <field name="overtime_hours_compute" widget="float_time" />
                <field name="deduction_hours_compute" widget="float_time" />
                <field name="absent_days" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="hr_attendance_summary_view_form" model="ir.ui.view">
        <field name="name">hr.attendance.summary.form</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <form string="Employee attendances summary" create="false" edit="false" delete="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="employee_id" class="oe_edit_only"/>
                        <h1><field name="employee_id" placeholder="Employee"/></h1>
                    </div>
                    <group>
                        <group>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/> - <field name="check_date" class="oe_inline"/>
                            </div>
                            <field name="contract_id" readonly="1"/>
                            <field name="attendance_mode" readonly="1"/>
                            <field name="ot_ded_calc_cycle" readonly="1" attrs="{'invisible': [('attendance_mode','=','na')]}"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="worked_days" />
                            <field name="absent_days" />
                            <field name="worked_hours_total_compute" widget="float_time" />
                            <field name="overtime_hours_compute" widget="float_time" />
                            <field name="deduction_hours_compute" widget="float_time" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendances">
                            <field name="summary_lines" nolabel="1" colspan="4" readonly="1">
                                <tree string="Summary Lines" decoration-bf="status == 'weekend'"
                                      decoration-warning="status in ('absent','unpaid')" decoration-info="status == 'leave'"
                                      decoration-muted="status == 'holiday'" editable="bottom">
                                    <field name="attendance_date" />
                                    <field name="dayofweek" />
                                    <field name="working_hours" widget="float_time" sum="Total Working Hours" />
                                    <field name="worked_hours" widget="float_time" sum="Total Worked Hours" />
                                    <field name="overtime_hours" widget="float_time" sum="Total Overtime Hours" />
                                    <field name="deduction_hours" widget="float_time" sum="Total Deduction Hours" />
                                    <field name="adjustment_hours" widget="float_time" sum="Total Adjustment Hours" />
                                    <button name="create_adjustment_entry" type="object" string="Adjustment" icon="fa-gears" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                        <page string="Manual">
                            <group>
<!--                                <group>-->
                                    <field name="manual_line_ids" nolabel="1">
                                        <tree>
                                            <field name="work_entry_type_id"/>
                                            <field name="no_of_days"/>
                                            <field name="no_of_hours"/>
                                        </tree>
                                    </field>

<!--                                    <field name="worked_hours_total" />-->
<!--                                    <field name="overtime_hours" />-->
<!--                                    <field name="deduction_hours" />-->

<!--                                        <field name="weekdays_overtime_hours"/>-->
<!--                                        <field name="weekend_overtime_hours"/>-->
<!--                                        <field name="public_holiday_overtime_hours"/>-->



<!--                                </group>-->
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_attendance_summary_view_filter" model="ir.ui.view">
        <field name="name">hr.attendance.summary_view_filter</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <search string="Hr Attendance Summary Search">
                <field name="employee_id"/>
<!--                <filter name="current_month" string="Current Month" domain="[('check_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01'))]" />-->
<!--                <separator/>-->
<!--                <filter string="My Attendances" domain="[('employee_id.user_id.id', '=', uid)]" />-->
<!--                <group expand="0" string="Group By">-->
<!--                    <filter name="employee" string="Employee" context="{'group_by':'employee_id'}"/>-->
<!--                    <separator/>-->
<!--                    <filter name="groupby_name" string="Month" context="{'group_by':'check_date'}"/>-->
<!--                </group>-->
            </search>
        </field>
    </record>

    <record id="hr_attendance_summary_view_pivot" model="ir.ui.view">
        <field name="name">hr.attendance.summary.pivot</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <pivot string="Attendance Summary">
                <field name="employee_id" type="row"/>
                <field name="check_date" type="col"/>
                <field name="worked_hours_total" type="measure"/>
                <field name="overtime_hours" type="measure"/>
                <field name="deduction_hours" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="hr_attendance_summary_view_graph" model="ir.ui.view">
        <field name="name">hr.attendance.summary.graph</field>
        <field name="model">hr.attendance.summary</field>
        <field name="arch" type="xml">
            <graph string="Attendance">
                <field name="employee_id"/>
                <field name="check_date"/>
                <field name="worked_hours_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- actions -->

    <record id="hr_attendance_summary_action" model="ir.actions.act_window">
        <field name="name">Attendances Summary</field>
        <field name="res_model">hr.attendance.summary</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="context">{"search_default_current_month":1}</field>
        <field name="search_view_id" ref="hr_attendance_summary_view_filter" />
    </record>

</odoo>