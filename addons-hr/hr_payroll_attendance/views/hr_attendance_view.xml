<odoo>

    <record id="view_attendance_tree_hr_pa_inherit1" model="ir.ui.view">
        <field name="name">hr.attendance.tree.pa.inherit1</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">check_in</attribute>
            </xpath>
            <field name="check_out" position="after">
                <field name="worked_hours" sum="Total Worked Hours" widget="float_time" />
                <!--<field name="worked_hours_payslip" sum="Total Payslip Hours"/>-->
            </field>
        </field>
    </record>
    
    <record id="hr_attendance_view_form_hr_pa_inherit1" model="ir.ui.view">
