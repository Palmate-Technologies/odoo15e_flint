<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_hr_attendance_update" model="ir.ui.view">
        <field name="name">hr.attendance.update.form</field>
        <field name="model">hr.attendance.update</field>
        <field name="arch" type="xml">
            <form string="Attendance Update">
                <group>
                    <group>
                        <field name="employee_filter" widget="radio" />
                        <field name="employee_id" attrs="{'invisible': [('employee_filter', '=', 'all')], 'required': [('employee_filter', '=', 'emp')]}" />
                    </group>
                    <group>
                        <field name="date_from" />
                        <field name="date_to" />
                    </group>
                </group>
                <footer>
                    <button string='Update' name="action_update_attendance" type="object" class="btn-primary"/> or
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_hr_attendance_update" model="ir.actions.act_window">
        <field name="name">Generate Attendance Summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.attendance.update</field>
<!--        <field name="view_type">form</field>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>