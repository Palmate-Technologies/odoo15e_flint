<?xml version="1.0" ?>
<odoo>

    <data noupdate="1">
        <record id="payslip_email_template" model="mail.template">
            <field name="name">Payslip: Send by email</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
<!--            <field name="subject">{{ object.employee_id.name }}, a new payslip is available for you</field>-->
            <field name="subject">{{ object.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.employee_id.address_home_id.id }}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;">
                                Dear <t t-esc="object.employee_id.name"></t>, Please find attached salary slip for period <t t-esc="object.date_from"></t> To <t t-esc="object.date_to"></t> From <t t-esc="object.company_id.name"></t>.
                                <br/>
                                <br/>
                                Please find the PDF in your employee portal.
                                <br/>
                                <br/>
                                Have a nice day,
                                <br/>
                                The HR Team
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
            <field name="report_template" ref="hr_payroll.action_report_payslip"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }}</field>
            <field name="lang">{{ object.employee_id.address_home_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>


    </data>
</odoo>

