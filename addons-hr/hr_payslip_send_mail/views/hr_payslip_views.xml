<odoo>
    <data>

        <record id="payslip_form_send_mail" model="ir.ui.view">
            <field name="name">payslip.send.mail</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="action_send_payslip" type="object" string="Send By Email" class="oe_highlight"/>
                </header>
            </field>
        </record>

        <record model="ir.actions.server" id="action_send_payslip">
            <field name="name">Send By Email</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_send_payslip()
            </field>
        </record>

    </data>
</odoo>