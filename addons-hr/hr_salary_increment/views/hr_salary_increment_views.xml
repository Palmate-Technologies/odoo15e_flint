<?xml version="1.0" encoding="utf-8" ?>
<odoo>

        <record id="view_hr_salary_increment_search" model="ir.ui.view">
            <field name="name">view.hr.salary.increment.search</field>
            <field name="model">hr.salary.increment</field>
            <field name="arch" type="xml">
                <search string="Salary Increment">
                    <field name="name"/>
                    <field name="effective_date"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee" domain="[]" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="view_hr_salary_increment_tree" model="ir.ui.view">
        <field name="name">view.hr.salary.increment.tree</field>
        <field name="model">hr.salary.increment</field>
        <field name="arch" type="xml">
            <tree string="Salary Increment" decoration-info="state in ['draft']" decoration-muted="state == 'cancel'">
                <field name="name" optional="show"/>
                <field name="employee_id" optional="show"/>
                <field name="contract_id" optional="show"/>
                <field name="effective_date" optional="show"/>
                <field name="salary_structure_updated" optional="show" invisible="1"/>
                <field name="state" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_salary_increment_form" model="ir.ui.view">
        <field name="name">view.hr.salary.increment.form</field>
        <field name="model">hr.salary.increment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" states="draft" class="btn-primary" data-hotkey="s" groups="hr_salary_increment.group_submit_salary_increment"/>
                    <button name="action_approve" string="Approve" type="object" states="to_approve" class="btn-primary" data-hotkey="a" groups="hr_salary_increment.group_approve_salary_increment"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,to_approve,approved" data-hotkey="c"/>
                    <button name="action_reset_draft" string="Set To Draft" type="object" states="cancel" class="btn-primary" data-hotkey="d"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"
                                   options="{'no_create_edit' : True, 'no_create' : True, 'no_open' : True}"/>
                            <field name="contract_id"
                                   options="{'no_create_edit' : True, 'no_create' : True, 'no_open' : True}"/>
                            <field name="salary_structure_updated" invisible="1"/>
                        </group>
                        <group>
                            <field name="effective_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Increment Lines" name="increment_lines">
                            <button name="get_increment_lines" string="Get Increment Lines" type="object" states="draft" data-hotkey="i"/>
                            <field
                                name="increment_lines"
                                widget="section_and_note_one2many"
                                mode="tree,from"
                                attrs="{'readonly': [('state', 'in', ('to_approve','approved'))]}"
                            >
                            <tree string="Increment Lines" editable="bottom">
                                <field name="increment_field_id" optional="show"/>
                                <field name="old_value" optional="show"/>
                                <field name="new_value" optional="show"/>
                                <field name="is_changed" invisible="1"/>
                            </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_increment" model="ir.actions.act_window">
        <field name="name">Salary Increment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.salary.increment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_salary_increment.view_hr_salary_increment_search"/>
    </record>

<!--    parent="hr_payroll.menu_hr_payroll_root"-->
    <menuitem id="menu_salary_increment" name="Salary Increment" sequence="68"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
              action="action_hr_salary_increment"/>

</odoo>