<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_employee_form_blood_group" model="ir.ui.view">
        <field name="name">hr.employee.form.blood.group</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="blood_group"/>
            </xpath>
            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="iqama_occupation"/>
                <field name="actual_work_trade"/>
                <field name="actual_work_trade_arabic"/>
            </xpath>
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="personal_email"/>
            </xpath>
            <xpath expr="//field[@name='work_permit_expiration_date']" position="after">
                <field name="work_permit_expiration_date_hijri"/>
            </xpath>
            <xpath expr="//field[@name='passport_id']" position="after">
                <field name="passport_expiry_date"/>
            </xpath>
            <xpath expr="//field[@name='permit_no']" position="after">
                <field name="work_permit_issue_date"/>
            </xpath>
            <xpath expr="//field[@name='country_of_birth']" position="after">
                <field name="date_of_entry"/>
                <field name="is_outside_kingdom"/>
            </xpath>
        </field>
    </record>


