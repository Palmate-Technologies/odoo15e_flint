<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--Search-->
    <record id="view_search_hr_sponsor" model="ir.ui.view">
        <field name="name">hr.sponsor.search</field>
        <field name="model">hr.sponsor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
            </search>
        </field>
    </record>


    <!--Tree-->
    <record id="view_tree_hr_sponsor" model="ir.ui.view">
        <field name="name">hr.sponsor.view.tree</field>
        <field name="model">hr.sponsor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!--Form-->
    <record id="view_form_hr_sponsor" model="ir.ui.view">
        <field name="name">hr.sponsor.view.form</field>
        <field name="model">hr.sponsor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Action-->
    <record id="action_view_hr_sponsor" model="ir.actions.act_window">
        <field name="name">Sponsors</field>
        <field name="res_model">hr.sponsor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a record.
            </p>
        </field>
    </record>

    <!--Menu-->
    <menuitem name="Sponsors" id="menu_view_hr_sponsor" parent="hr.menu_human_resources_configuration" action="action_view_hr_sponsor" sequence="120"/>

</odoo>



