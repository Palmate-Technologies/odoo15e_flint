<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QWeb Reports -->

        <record id="paperformat_purchase_custom" model="report.paperformat">
            <field name="name">Purchase Custom</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">23</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <record id="purchase_order_report_custom" model="ir.actions.report">
            <field name="name">Purchase</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">purchase_order_qweb.report_purchase_order_custom</field>
            <field name="report_file">purchase_order_qweb.report_purchase_order_custom</field>
            <field name="print_report_name">'Purchase - %s' % (object.name)</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="purchase_order_qweb.paperformat_purchase_custom"/>
        </record>



    </data>
</odoo>
