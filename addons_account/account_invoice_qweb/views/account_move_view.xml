<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_move_form_supply" model="ir.ui.view">
            <field name="name">view.move.form.supply</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="period_of_supply"/>
                </xpath>
                <field name="invoice_user_id" position="before">
                    <field name="internal_ref"/>
                </field>
                <div name="journal_div" position="after">
                    <field name="contract_no"/>
                </div>

                <xpath expr="//field[@name='tax_totals_json']" position="after">
                    <field name="adjustment_amount_calc"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
