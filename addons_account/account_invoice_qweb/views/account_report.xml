<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_tax_invoice_custom" model="report.paperformat">
            <field name="name">Tax Invoice</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
<!--            <field name="page_height">297</field>-->
<!--            <field name="page_width">210</field>-->
            <field name="orientation">Portrait</field>
<!--            <field name="margin_top">11</field>-->
            <field name="margin_top">23</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
<!--            <field name="header_spacing">14</field>-->
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>

        <!-- QWeb Reports -->
        <record id="account_invoices_tax" model="ir.actions.report">
            <field name="name">Invoices Tax</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_qweb.report_invoice_tax_custom</field>
            <field name="report_file">account_invoice_qweb.report_invoice_tax_custom</field>
            <field name="report_name">account_invoice_qweb.report_invoice_tax_custom</field>
<!--            <field name="print_report_name">(object._get_report_base_filename())</field>-->
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="account_invoice_qweb.paperformat_tax_invoice_custom"/>
        </record>

        <!-- QWeb Reports -->
        <record id="account_invoices_stc" model="ir.actions.report">
            <field name="name">Invoices STC</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_qweb.report_invoice_stc_custom</field>
            <field name="report_file">account_invoice_qweb.report_invoice_stc_custom</field>
            <field name="report_name">account_invoice_qweb.report_invoice_stc_custom</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="account_invoice_qweb.paperformat_tax_invoice_custom"/>
        </record>

<!--        Ericson invoice-->
        <record id="account_invoices_ericson" model="ir.actions.report">
            <field name="name">Invoices Ericson</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_qweb.report_invoice_ericson_custom</field>
            <field name="report_file">account_invoice_qweb.report_invoice_ericson_custom</field>
            <field name="report_name">account_invoice_qweb.report_invoice_ericson_custom</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="account_invoice_qweb.paperformat_tax_invoice_custom"/>
        </record>

    <template id="web.external_layout_standard">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <div class="col-3 mb4">
<!--                <div class="col-11 text-center">-->
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 110px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6" name="company_address">
                    <span t-if="company.company_details" t-field="company.company_details"></span>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}" t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-out="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <div t-field="company.report_footer"/>
                </ul>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>
    </template>


    </data>
</odoo>
